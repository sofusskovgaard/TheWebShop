@page
@model CreateModel
@{
    ViewData["Title"] = "Create new product";
}

<form method="post" enctype="multipart/form-data">

    <div class="form-row">
        <div class="col-md-12">

            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" multiple asp-for="@Model.Pictures">
                        <label class="custom-file-label" asp-for="@Model.Pictures">Choose file</label>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="form-row">
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="@Model.FormModel.Name"></label>
                <input type="text" class="form-control" asp-for="@Model.FormModel.Name"/>
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label>Brand</label>
                <select class="custom-select" asp-for="@Model.FormModel.BrandEntityId" asp-items="@Model.Brands">
                    <option disabled selected>Choose brand...</option>
                </select>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="@Model.FormModel.Price"></label>
                <input type="text" class="form-control" asp-for="@Model.FormModel.Price"/>
            </div>
        </div>
    </div>

    <div class="d-flex">
        <a class="btn btn-light mr-1" asp-page="/Admin/Products/Index"><i class="fas fa-arrow-left fa-fw mr-2"></i>Back</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>
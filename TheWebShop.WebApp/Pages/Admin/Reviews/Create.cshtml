@page
@model CreateModel
@{
    ViewData["Title"] = "Create a new review";
}

<form method="post">

    <div class="form-row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="@Model.FormModel.Title"></label>
                <input type="text" class="form-control" asp-for="@Model.FormModel.Title"/>
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="@Model.FormModel.Rating"></label>
                <input type="number" class="form-control" asp-for="@Model.FormModel.Rating"/>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="form-group">
                <label>Product</label>
                <select type="text" class="form-control" asp-for="@Model.FormModel.ProductEntityId" asp-items="@Model.Products">
                </select>
            </div>
        </div>
    </div>

    <div class="form-row">

        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="@Model.FormModel.Comment"></label>
                <textarea class="form-control" rows="3" asp-for="@Model.FormModel.Comment"></textarea>
            </div>
        </div>
        
    </div>

    <div class="form-row">
        <div class="col-md-6">
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" asp-for="@Model.FormModel.Active">
                        Active
                    </label>
                    <small class="d-block text-muted">Should this review be shown throughout the website?</small>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex">
        <a class="btn btn-light mr-1" asp-page="Index"><i class="fas fa-arrow-left fa-fw mr-2"></i>Back</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>
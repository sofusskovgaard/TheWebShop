@model IndexModel

<div class="card">
    <div class="card-body">
        <div class="form-row">
            <div class="col-md-12">

                <fieldset id="includeOutOfStuckProducts">

                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" asp-for="@Model.Filter.IncludeOutOfStock" id="IncludeOutOfStock_true" value="true" checked onchange="this.form.submit()">
                            Include out of stock products
                        </label>
                    </div>

                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" asp-for="@Model.Filter.IncludeOutOfStock" id="IncludeOutOfStock_false" value="false" onchange="this.form.submit()">
                            Hide out of stock products
                        </label>
                    </div>

                </fieldset>

            </div>
        </div>
    </div>
</div>